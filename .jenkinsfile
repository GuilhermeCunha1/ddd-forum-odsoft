node {
    try{
    stage('Checkout') {
        // Clona o repositório
        git 'https://github.com/GuilhermeCunha1/ddd-forum-odsoft.git'
    }
    stage('Build') {
        // Instala as dependências e roda o build
        if (isUnix()) {
            sh 'npm install'
            sh 'npm run build'
            sh 'npm install jest-junit --save-dev'
            sh 'docker-compose up'
            sh 'npm run db:create dev'
            sh 'npm run migrate:dev'
        } else {
            bat 'npm install'
            bat 'npm run build'
        }
    }


    stage('Unit Test') {
        // Executa os testes
        if (isUnix()) {
            sh 'npm run test -- --testPathIgnorePatterns=api'
        } else {
            bat 'npm run test'
        }
}

    stage('Integration Test') {
        // Executa os testes
        if (isUnix()) {
            sh 'npm run test --coverage:api'
        } else {
            bat 'npm run test'
        }

}
    
}catch (Exception e){
    echo "Erro encontrado: ${e}"
} finally {
    stage('Clean'){
    sh 'rm -rf target/'
}

        publishHTML (target: [
            reportDir: 'reports',
            reportFiles: 'test-report.html', 
            reportName: 'Relatório de Testes',
            keepAll: true,
            alwaysLinkToLastBuild: true,
            allowMissing: false
        ])
    }
}

